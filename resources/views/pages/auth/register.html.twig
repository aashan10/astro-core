{% extends 'layouts/app.html.twig' %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    {{ parent() }}
    <div class="w-full py-12">
        <div class="w-full max-w-[1280px] flex flex-col md:flex-row mx-auto rounded shadow-sm bg-transparent">
            <div class="flex flex-1 bg-red-300 min-h-[25vh] rounded shadow">
                <div class="flex flex-1 flex-row my-auto justify-center my-10">
                    <div class="flex text-6xl">
                        <span class="inline-flex p-8 bg-red-500 text-white font-bold rounded">Astro</span>
                        <span class="inline-flex p-4 bg-white text-red-500 font-bold rounded">Core</span>
                    </div>
                </div>
            </div>
            <div class="flex flex-1 flex-col bg-gray-100 p-5">
                <form action="/register" method="post" class="flex flex-1 flex-col h-inherit">
                    <div class="flex flex-row justify-between">
                        <div class="flex flex-col my-3">
                            <label for="first_name" class="text-gray-800 font-bold mb-1">First Name</label>
                            <input type="text" class="p-3 shadow rounded" placeholder="First Name" name="first_name"
                                   id="first_name"/>
                        </div>
                        <div class="flex flex-col my-3">
                            <label for="last_name" class="text-gray-800 font-bold mb-1">Last Name</label>
                            <input type="text" class="p-3 shadow rounded" placeholder="Last Name" name="last_name"
                                   id="last_name"/>
                        </div>
                    </div>
                    <div class="flex flex-col my-3">
                        <label for="email" class="text-gray-800 font-bold mb-1">Email</label>
                        <input type="email" class="p-3 shadow rounded" placeholder="Email" name="email" id="email"/>
                    </div>
                    <div class="flex flex-col my-3">
                        <label for="password" class="text-gray-800 font-bold mb-1">Password</label>
                        <input type="password" class="p-3 shadow rounded" placeholder="Password" name="password"
                               id="password"/>
                    </div>
                    <div class="flex flex-col my-3">
                        <label for="confirm_password" class="text-gray-800 font-bold mb-1">Confirm Password</label>
                        <input type="password" class="p-3 shadow rounded" placeholder="Confirm Password"
                               name="confirm_password" id="confirm_password"/>
                    </div>

                    <div class="flex flex-col my-3">
                        <div class="mt-5 flex justify-between lg:flex-shrink-0">
                            <div class="inline-flex rounded-md shadow overflow-hidden">
                                <button type="submit"
                                        class=" inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-500 hover:bg-red-700">
                                    Register
                                </button>
                            </div>
                            <div class="ml-3 inline-flex rounded-md shadow overflow-hidden">
                                <button type="reset"
                                        class=" inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-red-500 bg-white hover:bg-red-50">
                                    Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}